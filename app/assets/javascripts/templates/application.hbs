{{#if isModalVisible}}
  <div id='overlay'>
    {{outlet modal}}
  </div>
{{/if}}

<div class="left">

  <div class="thumbnail">
      <img {{bindAttr src="view.currentImageUrl" alt="view.currentImage.fileName"}}/>
  </div>

  <div class="controlPanel">

    <input id="uploader" multiple='multiple' type='file'>
    
    <div id="uploadBtn" class="btn" {{action showUploadBox target="view"}}>
      <div class="label">Upload</div>
    </div>

    <div id="downloadBtn" class="btn">
      <a class="label" {{bindAttr href="view.currentImage.originalUrl"}}>Download</a>
    </div>

    
  </div>
</div>

<div class="right">
  {{#each image in controller}}
    <div class="thumbnail">
      <img src="/assets/grey_empty.gif" {{bindAttr data-original="image.thumbnailUrl" alt="image.fileName"}} {{action selectImage image target="view"}} />
    </div>
  {{/each}}
</div>

